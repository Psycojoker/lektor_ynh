set -eux

$app=lektor

version=$(sudo yunohost app setting $app version)

# 1.1 -> 2
if [[ "$version" == "1.1" ]]; then
    sudo apt-get update
    sudo apt-get install -y python-dev imagemagick

    sudo su lektor -c "/home/lektor/lektor/ve/bin/pip install -U lektor==2.3"

    sudo yunohost app setting $app version -v "2.3"

    sudo systemctl restart ynh-lektor

    version="2.3"
fi
